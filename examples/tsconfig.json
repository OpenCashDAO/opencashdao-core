{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "build",
    "incremental": true,
    "tsBuildInfoFile": "./build/.tsbuildinfo",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false      
  },
  "include": ["lib/**/*", "test/**/*", "examples/**/*"],
  "exclude": ["node_modules", "build", ".eslintrc.cjs"],
  "compileOnSave": false
}
